{
  "name": "super-chat",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "frontend": "ng serve",
    "backend": "tsx --env-file .env projects/backend/src/server.js",
    "backend:dev": "tsx --watch --env-file .env projects/backend/src/server.js",
    "iniciar": "concurrently \"npm run frontend\" \"npm run backend:dev\"",
    "db:migrate": "tsx --env-file .env projects/backend/src/database/migrations/migrations.js",
    "db:seed": "tsx --env-file .env projects/backend/src/database/seeders/seeders.js",
    "build:frontend": "ng build shared-types && ng build message-lib && ng build frontend",
    "build:backend": "npx tsc -p projects/backend",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:frontend": "node dist/frontend/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.15",
    "@angular/compiler": "^19.2.15",
    "@angular/core": "^19.2.15",
    "@angular/forms": "^19.2.15",
    "@angular/platform-browser": "^19.2.15",
    "@angular/platform-browser-dynamic": "^19.2.15",
    "@angular/platform-server": "^19.2.15",
    "@angular/router": "^19.2.15",
    "@angular/ssr": "^19.2.17",
    "bcrypt": "6.0.0",
    "connect-mongo": "5.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "1.18.2",
    "mongodb": "6.19.0",
    "rxjs": "7.8.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tslib": "^2.3.0",
    "zone.js": "0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.17",
    "@angular/cli": "^19.2.17",
    "@angular/compiler-cli": "^19.2.15",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.2",
    "@types/jasmine": "5.1.0",
    "@types/node": "^18.18.0",
    "concurrently": "^9.2.0",
    "jasmine-core": "5.6.0",
    "karma": "6.4.0",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.0",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "ng-packagr": "^19.2.0",
    "tsx": "4.20.5",
    "typescript": "5.7.2"
  }
}
