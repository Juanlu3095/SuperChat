{
  "compilerOptions": {
    "baseUrl": "",
    "module": "nodenext",
    "resolveJsonModule": false,
    "esModuleInterop": true,
    "rootDir": "src", // Indica url base desde la que empieza a buscar los .ts para compilar
    "target": "ESNext",
    "outDir": "../../dist/api",
    "sourceMap": true,
    "types": [
      "node"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowImportingTsExtensions": false,
    "noEmit": false // Si esto es true, los archivos no se compilan a .js
  },
  "exclude": ["test/**/*"]
}